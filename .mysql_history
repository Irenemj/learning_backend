--
-- Table structure for table `pages`
--
DROP TABLE IF EXISTS `pages`;
CREATE TABLE `pages` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `subject_id` int(11) NOT NULL,
  `menu_name` varchar(30) NOT NULL,
  `position` int(3) NOT NULL,
  `visible` tinyint(1) NOT NULL,
  `content` text,
  PRIMARY KEY (`id`),
  KEY `subject_id` (`subject_id`)
) ENGINE=InnoDB AUTO_INCREMENT=7 DEFAULT CHARSET=latin1;
CREATE TABLE `pages` (   `id` int(11) NOT NULL AUTO_INCREMENT,   `subject_id` int(11) NOT NULL,   `menu_name` varchar(30) NOT NULL,   `position` int(3) NOT NULL,   `visible` tinyint(1) NOT NULL,   `content` text,   PRIMARY KEY (`id`),   KEY `subject_id` (`subject_id`) ) ENGINE=InnoDB AUTO_INCREMENT=7 DEFAULT CHARSET=latin1;
